#!/bin/bash
NUM0=$(cat /sys/class/power_supply/BAT0/capacity)
STATE0=$(cat /sys/class/power_supply/BAT0/status)
NUM1=$(cat /sys/class/power_supply/BAT1/capacity)
STATE1=$(cat /sys/class/power_supply/BAT1/status)

#colorget() {
